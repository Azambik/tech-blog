<article>
  <a class="text-secondary" href="/dashboard"> &larr; Return to dashboard</a>
  <h2>
    Edit Post
  </h2>
  <form class="edit-post-form">
    <div>
      <input name="post-title" type="text" value="{{post.title}}" />
      </div>
      <div>
      <textarea id="post-body" name="post-body" cols="50" rows="10">{{post.post_body}}</textarea>
    </div>
    <div>
      {{post.vote_count}} {{format_plural "point" post.vote_count}} by you on {{format_date post.created_at}}
      |
      <a class="text-secondary" href="/post/{{post.id}}">{{post.comments.length}} {{format_plural "comment" post.comments.length}}</a>
    </div>
    <button type="submit" class="btn bg-brown text-pistachio">Save post</button>
    <button type="button" class="delete-post-btn btn bg-brown text-pistachio">Delete post</button>
  </form>
</article>



<script src="/javascript/edit-post.js"></script>
<script src="/javascript/delete-post.js"></script>
<script src="/javascript/comment.js"></script>